{% extends 'base.html.twig' %}

{% block title %}Administration Gestion des Utilisateurs{% endblock %}

{% block body %}

    <a href="{{ path('app_admin') }}" class="btn">Retour au menu précédent</a>
    <h1>Gestion des utilisateurs</h1>

    <form action="#" method="POST">
        <input type="text" name="search" id="search" placeholder="Nom d'utilisateur">
        <button>Rechercher</button>
    </form>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <select name="pets" id="pet-select">
                        {% for role in user.roles %}
                            <option value="{{ role }}">{{ role }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td><a href="{{ path('app_admin_users', {user: user.id}) }}">Gérer l'utilisateur</a></td>
                <td>{% if app.user == user %}Ceci est vous ! {% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}