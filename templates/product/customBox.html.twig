        <input type="hidden" name="json" id="json-validate" value="">
        <button class="btn">Valider la boîte !</button>
    </form>
    <div id="ThreeJS">

    </div>
    <ul id="food-list">
        <li><p class="btn" data-type="1">Maki Saumon Avocat</p></li>
        <li><p class="btn" data-type="7">Nagiri Saumon</p></li>
    </ul>


{% endblock %}
